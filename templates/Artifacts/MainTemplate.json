{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "chef_server_url": {
      "type": "string"
    },
    "chef_node_name": {
      "type": "string"
    },
    "run_list": {
      "type": "string",
      "defaultValue": ""
    },
    "validation_client_name": {
      "type": "string"
    },
    "validation_key": {
      "type": "securestring"
    },
    "client_rb": {
      "type": "string",
      "defaultValue": ""
    },
    "location": {
      "type": "string"
    },
    "bootstrap_version": {
      "type": "string",
      "defaultValue": ""
    },
    {{#windows}}
    "daemon": {
        "type": "string",
        "defaultValue": ""
    },
    {{/windows}}
    "chef_daemon_interval": {
        "type": "string",
        "defaultValue": ""
    },
    "vmName": {
      "type": "string"
    },
    "ssl_verify_mode": {
      "type": "string",
      "defaultValue": "peer"
    },
    "chef_environment": {
      "type": "string"
    },
    "databag_secret": {
      "type": "securestring",
      "defaultValue": ""
    },
    "chef_server_crt": {
      "type": "securestring",
      "defaultValue": ""
    }
  },
  "variables": {
    "bootstrap_options": "[if(empty(parameters('chef_node_name')), variables('bootstrap_options_no_node_name'), variables('bootstrap_options_with_node_name'))]",

    "bootstrap_options_with_node_name": {
      "chef_node_name": "[parameters('chef_node_name')]",
      "chef_server_url": "[parameters('chef_server_url')]",
      "validation_client_name": "[parameters('validation_client_name')]",
      "node_ssl_verify_mode": "[parameters('ssl_verify_mode')]",
      "environment": "[parameters('chef_environment')]"      
    },

    "bootstrap_options_no_node_name": {
      "chef_server_url": "[parameters('chef_server_url')]",
      "validation_client_name": "[parameters('validation_client_name')]",
      "node_ssl_verify_mode": "[parameters('ssl_verify_mode')]",
      "environment": "[parameters('chef_environment')]"
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('vmName'),'/{{ resource_name }}')]",
      "type": "{{ resource_type }}/virtualMachines/extensions",
      "location": "[parameters('location')]",
      "apiVersion": "{{ api_version }}",
      "properties": {
        "publisher": "Chef.Bootstrap.WindowsAzure",
        {{#arm}}
        "type": "{{ type }}",
        "typeHandlerVersion": "{{ type_handler_version }}",
        "autoUpgradeMinorVersion": {{ auto_upgrade_minor_version }},
        {{/arm}}
        {{#classic}}
        "version": "{{ classic_version }}",
        "extension": "{{ type }}",
        {{/classic}}
        {{#arm}}
        "settings": {
        {{/arm}}
        {{#classic}}
        "parameters": {
          "public": {
        {{/classic}}
            {{#windows}}
            "daemon": "[parameters('daemon')]",
            {{/windows}}
            "chef_daemon_interval": "[parameters('chef_daemon_interval')]",
            "bootstrap_version": "[parameters('bootstrap_version')]",
            "bootstrap_options": "[variables('bootstrap_options')]",
            "runlist": "[parameters('run_list')]",
            "client_rb": "[parameters('client_rb')]"
        {{#arm}}
          },
        "protectedSettings": {
          "validation_key": "[parameters('validation_key')]",
          "chef_server_crt": "[parameters('chef_server_crt')]",
          "secret": "[parameters('databag_secret')]"
        }
        {{/arm}}
        {{#classic}}
          },
          "private": {
            "validation_key": "[parameters('validation_key')]",
            "chef_server_crt": "[parameters('chef_server_crt')]",
            "secret": "[parameters('databag_secret')]"
          }
        }
        {{/classic}}
      }
    }
  ]
}
